{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "Markdown",
    "javascript",
    "javascriptreact",
    "json",
    "typescript",
    "typescriptreact"
  ],
  "cSpell.language": "en",
  "cSpell.ignorePaths": [
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",
    "node_modules/**",
    ".git"
  ],

  "prettier.trailingComma": "all",
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.printWidth": 80,
  "prettier.semi": true,
  "prettier.bracketSpacing": true,

  "html.format.enable": true,
  "html.autoClosingTags": true,
  "html.filetypes": ["html", "handlebars", "hbs"]
}
